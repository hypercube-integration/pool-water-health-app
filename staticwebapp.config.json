{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*"]
  },
  "routes": [
    { "route": "/api/users", "allowedRoles": ["admin", "manager"] },
    { "route": "/api/*", "allowedRoles": ["authenticated"] }
  ],
  "responseOverrides": {
    "401": { "rewrite": "/login" },
    "403": { "rewrite": "/no-access" }
  }
}
